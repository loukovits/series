{% extends 'templates/app.twig'%}

{% block content %}
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="panel panel-default">
                <div class="panel-heading">Users</div>
                <div class="panel-body">
                    <form action="{{ path_for('admin.users.delete') }}" method="post">
                        <div class="form-group col-md-4">
                            <select name="UserAction" class="form-control">
                                <option selected="selected" value="admin.users.delete">Delete</option>
                            </select>
                        </div>
                        <div class="form-group table-responsive col-md-12">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>ID</th>
                                    <th>User</th>
                                    <th>Email</th>
                                    <th>Joined</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for user in users %}
                                <tr>
                                    <td scope="row"><input type="checkbox" name="check[]" value="{{ user.id }}"></td>
                                    <td scope="row">{{ user.id }}</td>
                                    <td scope="row">{{ user.name }}</td>
                                    <td scope="row">{{ user.email }}</td>
                                    <td scope="row">{{ user.created_at }}</td>
                                </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <div class="col-md-12">
                            <input type="hidden" name="_METHOD" value="DELETE"/>
                            <input type="submit" class="btn btn-default" value="Submit"/>
                            {{ csrf.field | raw }}
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}